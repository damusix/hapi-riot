{
  "name": "hapi-riot",
  "version": "0.0.0-development",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "test": "NODE_ENV=test lab -v -a @hapi/code -I '__core-js_shared__'",
    "tdd": "nodemon -e js,json,riot -w lib -w test -x 'npm run test'",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/damusix/hapi-riot.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@hapi/code": "^8.0.2",
    "@hapi/hapi": "^19.2.0",
    "@hapi/lab": "^23.0.0",
    "@hapi/vision": "^6.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "semantic-release": "^17.1.1",
    "sinon": "^9.0.2"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@riotjs/compiler": "^4.10.0",
    "@riotjs/ssr": "^5.0.0",
    "riot": "^4.13.4"
  }
}
